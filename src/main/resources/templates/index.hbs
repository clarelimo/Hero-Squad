{{#partial "styles"}}
<!--    <link rel="stylesheet" href="/css/index.css">-->
{{/partial}}

{{#partial "content"}}
    <h1>hello world</h1>
    <div class="container intro">
        <h1>Welcome to the Heros Squad!</h1>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <h3>Add your hero</h3>
                <form action="/heros/new" method="POST">
                    <div class="row mb-3">
                        <label for="name" class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="name" name="name">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="age" class="col-sm-2 col-form-label">Age</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="inputPassword3">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-6 offset-sm-2">
                            <h4>Choose your hero's powers</h4>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="superhuman" name="power">
                                <label class="form-check-label" for="superhuman">
                                    Superhuman strength
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="telepathy" name="power">
                                <label class="form-check-label" for="telepathy">
                                    Telepathy
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="invisibility" name="power">
                                <label class="form-check-label" for="invisibility">
                                    Invisibility
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="shifting" name="power">
                                <label class="form-check-label" for="shifting">
                                    Shape shifting
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="flight" name="power">
                                <label class="form-check-label" for="flight">
                                    Flight
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-6 offset-sm-2">
                            <h4>Choose your hero's weaknesses</h4>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="webfluid" name="weakness">
                                <label class="form-check-label" for="webfluid">
                                    Web Fluid
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="magnets" name="weakness">
                                <label class="form-check-label" for="magnets">
                                    Magnets
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="sonicwaves" name="weakness">
                                <label class="form-check-label" for="sonicwaves">
                                    Sonic Waves
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="anger" name="weakness">
                                <label class="form-check-label" for="anger">
                                    Too much anger
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="lowbatteries" name="weakness">
                                <label class="form-check-label" for="lowbatteries">
                                    Low batteries
                                </label>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Hero</button>
                </form>
            </div>

            <div class="col-md-6">
                <h3>Add your hero's Squad</h3>
                <small>NB: You can only add one</small>

            </div>


        </div>
    </div>
{{/partial}}
{{>layout.hbs}}